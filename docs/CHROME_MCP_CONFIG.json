{
	"name": "Chrome Dev Tools MCP Configuration",
	"description": "Configuration for connecting MCP to Chrome Dev Tools for the songshare-effect project",
	"chrome": {
		"debugPort": 9222,
		"debugAddress": "localhost",
		"debugEndpoint": "http://localhost:9222",
		"websocketEndpoint": "ws://localhost:9222",
		"userDataDir": "~/.chrome-debug-profile"
	},
	"development": {
		"frontend": {
			"url": "http://localhost:5173",
			"name": "React Frontend (Vite)"
		},
		"api": {
			"url": "http://localhost:8787",
			"name": "Hono API Server"
		}
	},
	"mcp": {
		"capabilities": [
			"network.monitor",
			"console.execute",
			"dom.inspect",
			"performance.analyze",
			"debugger.attach",
			"storage.inspect"
		],
		"commonTasks": {
			"testAuthentication": {
				"description": "Test JWT token authentication flow",
				"steps": [
					"Monitor network requests to /api/auth/*",
					"Inspect localStorage for auth tokens",
					"Verify token expiration handling"
				]
			},
			"debugApiCalls": {
				"description": "Debug API calls to Hono backend",
				"steps": [
					"Monitor requests to localhost:8787",
					"Inspect request/response headers",
					"Check CORS configuration"
				]
			},
			"testReactComponents": {
				"description": "Test React components with MCP",
				"steps": [
					"Execute JavaScript in console",
					"Inspect component state",
					"Test user interactions"
				]
			},
			"performanceAnalysis": {
				"description": "Analyze app performance",
				"steps": [
					"Record performance metrics",
					"Analyze bundle size",
					"Check for memory leaks"
				]
			}
		}
	},
	"troubleshooting": {
		"wsl2": {
			"portForwarding": "WSL2 automatically forwards localhost ports to Windows",
			"chromePath": [
				"/mnt/c/Program Files/Google/Chrome/Application/chrome.exe",
				"/mnt/c/Users/$USER/AppData/Local/Google/Chrome/Application/chrome.exe"
			],
			"networkAccess": "Use 0.0.0.0 for remote debugging address in WSL2"
		},
		"common_issues": {
			"port_in_use": "Kill existing Chrome processes: pkill -f chrome",
			"debug_not_accessible": "Check firewall settings and port forwarding",
			"cors_issues": "Chrome started with --disable-web-security flag"
		}
	}
}
