{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ES2023",
		"lib": ["ES2023"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		/* Type Checking */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,
		/* Modules */
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,
		"noUncheckedSideEffectImports": true,
		/* Emit */
		"noEmit": true,
		"noErrorTruncation": true,
		"preserveWatchOutput": true,
		/* Interop Constraints */
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		/* Path Mapping */
		"paths": {
			"@/shared/*": ["./shared/src/*"],
			"@/react/*": ["./react/src/*"],
			"@/api/*": ["./api/src/*"],
			"@/scripts/*": ["./scripts/*"]
		},
		"types": ["bun"]
		// allow the compiler to resolve types from project `types`/ and
		// from packages that ship their own declarations (e.g. `vite`,
		// `@cloudflare/workers-types`) by omitting an explicit `typeRoots`.
		// (Specifying `typeRoots` prevents TypeScript from looking in
		// other package locations, which caused failures resolving
		// `vite/client` and `@cloudflare/workers-types`.)
	}
}
