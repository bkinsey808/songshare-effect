{
	"name": "songshare-effect",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev:client": "vite",
		"dev:api": "cd api && wrangler dev --no-enable-containers --env dev",
		"dev": "npx kill-port 8787 5173 && npx concurrently \"npm run dev:client\" \"npm run dev:api\" --names \"frontend,api\" --prefix-colors \"blue,green\"",
		"dev:all": "npm run dev",
		"dev:debug": "npx concurrently \"npm run dev:all\" \"bash -lc 'if [ \"${AUTO_OPEN_CHROME:-0}\" = \"1\" ]; then npm run chrome:debug:secure; else echo \"Skipping chrome (AUTO_OPEN_CHROME not set)\"; fi'\" --names \"servers,chrome\" --prefix-colors \"cyan,yellow\"",
		"build:client": "tsc -b && vite build",
		"build:api": "tsc -p api/tsconfig.json",
		"build": "npm run build:client && npm run build:api",
		"build:all": "npm run build",
		"format": "npx oxfmt .",
		"format:check": "npx oxfmt --check .",
		"format:list-different": "npx oxfmt --list-different .",
		"lint": "npx oxlint --config .oxlintrc.json --type-aware .",
		"lint:fix": "npx oxlint --config .oxlintrc.json --type-aware --fix .",
		"lint:list-files": "npx oxlint --format=unix . | awk -F: '{print $1}' | sort -u | sed '/^$/d'",
		"preview": "vite preview",
		"file:check": "bun run scripts/fileCheck.ts",
		"supabase:generate": "bun run scripts/build/generate-effect-schemas/generate-effect-schemas.ts",
		"find-missing-jsdoc": "bun run ./scripts/find-missing-jsdoc.bun.ts",
		"supabase:migrate": "./scripts/run-migrations.sh",
		"supabase:migrate:ts": "bun run scripts/migrate/migrate.ts",
		"supabase:migrate:single": "dotenv -e .env -- sh -c 'psql -h \"$PGHOST\" -U \"$PGUSER\" -d \"$PGDATABASE\" -f \"$1\"' --",
		"supabase:keep-alive": "bun run scripts/keepAlive.ts",
		"supabase:export": "dotenv -e .env -- pg_dump --schema=public --schema-only --no-owner --no-privileges --format=plain > shared/src/generated/schema.sql",
		"dev:servers:bg": "bash -lc '\n  nohup npm run dev:all > /tmp/dev-servers.log 2>&1 & echo $!\n'",
		"dev:servers:detached": "bash -lc 'setsid npm run dev:all > /tmp/dev-servers.log 2>&1 < /dev/null & echo $!'",
		"deploy:pages": "npm run build:client && bun run scripts/build/prepare-functions/prepare-functions.ts && npm run check:functions-dist-imports && dotenv -e .env -- bash -lc 'cd dist && npx wrangler pages deploy . --project-name=\"$CLOUDFLARE_PROJECT\" --branch=main --commit-dirty=true'",
		"check:functions-dist-imports": "bun ./scripts/check-dist-functions-imports.ts dist/functions",
		"test:functions-dist": "bun run scripts/build/prepare-functions/prepare-functions.ts && npm run check:functions-dist-imports",
		"deploy:api": "npm run build:api && cd api && npx wrangler deploy --env production",
		"deploy": "npm run deploy:pages && npm run deploy:api",
		"deploy:full": "npm run deploy && echo 'ðŸ”„ Purging cache...' && ./scripts/purge-cache.sh",
		"cache:purge": "./scripts/purge-cache.sh",
		"test:unit": "vitest run",
		"check:single-exports": "bash ./scripts/check/single-exports.sh",
		"test:e2e:dev": "PLAYWRIGHT_BASE_URL=https://127.0.0.1:5173 bun ./scripts/playwright/run-playwright-with-timeout.bun.ts --reporter=list --retries=0 --workers=3 --forbid-only --timeout=20000 --grep-invert \"Lighthouse audit\"",
		"test:e2e:lighthouse": "npx playwright test e2e/specs/lighthouse.spec.ts --project=chromium --reporter=list",
		"test:e2e:lighthouse:dist-run": "bash ./scripts/run-lighthouse-dist.sh",
		"playwright:install": "npx playwright install",
		"postinstall": "node ./scripts/playwright/postinstall-playwright-wrapper.mjs",
		"test:e2e:prod": "PLAYWRIGHT_BASE_URL=https://effect.bardoshare.com npx playwright test --reporter=list",
		"test:e2e:lighthouse:local": "PLAYWRIGHT_BASE_URL=https://127.0.0.1:5173 npx playwright test e2e/specs/lighthouse.spec.ts --project=chromium --reporter=list",
		"test:e2e:lighthouse:ci": "LIGHTHOUSE_URL=https://your-preview-url npx playwright test e2e/specs/lighthouse.spec.ts --project=chromium --reporter=list",
		"smoke:preview": "bun ./scripts/playwright/smoke-preview.bun.ts",
		"smoke:ci": "bash -lc 'CI=1 npx playwright test --project=chromium --reporter=list,junit e2e/render.e2e.ts || true'",
		"test:e2e:dev:once": "bun ./scripts/playwright/playwright-run-and-test.bun.ts",
		"prepare": "husky install",
		"commit": "git-cz",
		"commitlint": "commitlint",
		"commitlint:range": "commitlint --from=origin/main --to=HEAD",
		"commitlint:edit": "commitlint --edit",
		"test:auth-bypass": "npx bun e2e/test-auth-bypass.bun.ts"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@supabase/supabase-js": "^2.90.1",
		"effect": "^3.18.4",
		"i18next": "^23.16.8",
		"react": "^19.2.1",
		"react-compiler-runtime": "19.1.0-rc.3",
		"react-dom": "^19.2.1",
		"react-i18next": "^15.7.4",
		"react-router": "^7.12.0",
		"react-router-dom": "^7.12.0",
		"typegpu": "^0.9.0",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.11.0",
		"@babel/core": "^7.28.4",
		"@cloudflare/workers-types": "^4.20250924.0",
		"@commitlint/cli": "^17.8.1",
		"@commitlint/config-conventional": "^17.8.1",
		"@cspell/eslint-plugin": "^9.3.2",
		"@eslint/js": "^9.39.1",
		"@playwright/test": "^1.56.1",
		"@shopify/eslint-plugin": "^50.0.0",
		"@tailwindcss/postcss": "^4.1.17",
		"@testing-library/react": "^14.0.0",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/bun": "^1.3.3",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.1",
		"@types/react-dom": "^19.2.1",
		"@types/react-i18next": "^7.8.3",
		"@vitejs/plugin-react": "^5.1.1",
		"@vitest/coverage-v8": "^4.0.9",
		"@webgpu/types": "^0.1.68",
		"autoprefixer": "^10.4.22",
		"babel-plugin-react-compiler": "1.0.0",
		"bun": "^1.3.2",
		"chrome-launcher": "^1.2.1",
		"commitizen": "^4.3.1",
		"concurrently": "^9.2.1",
		"cspell": "^9.2.1",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv-cli": "^10.0.0",
		"esbuild": "^0.25.12",
		"eslint": "^9.39.1",
		"eslint-plugin-boundaries": "^5.2.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^61.2.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-promise": "^7.1.0",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-storybook": "^10.0.7",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^16.4.0",
		"hono": "^4.10.3",
		"husky": "^8.0.3",
		"jsdom": "^27.2.0",
		"lighthouse": "^13.0.1",
		"lint-staged": "^13.3.0",
		"nanoid": "^5.1.6",
		"oxfmt": "^0.21.0",
		"oxlint": "^1.29.0",
		"oxlint-tsgolint": "^0.8.1",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"puppeteer": "^24.30.0",
		"react-compiler-healthcheck": "19.1.0-rc.3",
		"supabase": "^2.72.8",
		"tailwindcss": "^4.1.13",
		"ts-node": "^10.9.2",
		"typescript": "~5.9.2",
		"typescript-eslint": "^8.46.4",
		"typescript-file-checker": "^0.1.3",
		"unplugin-typegpu": "^0.9.0",
		"vite": "npm:rolldown-vite@^7.1.12",
		"vitest": "^4.0.9",
		"wait-on": "^9.0.3",
		"wrangler": "^4.47.0",
		"ws": "^8.18.3"
	},
	"overrides": {
		"tar": "^7.5.3",
		"vite": "npm:rolldown-vite@^7.1.12"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx}": [
			"npx oxfmt \"{,**/}*.{js,ts,jsx,tsx}\"",
			"git add"
		]
	},
	"packageManager": "npm@10.13.1"
}
