{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		/* Override base config for Cloudflare Workers compilation */
		"noEmit": false,
		"outDir": "./dist",
		"allowJs": false,
		"esModuleInterop": true,
		"isolatedDeclarations": true,
		"noPropertyAccessFromIndexSignature": false,
		"declaration": true,
		"types": ["@cloudflare/workers-types"],

		/* Remove extensions that are incompatible with emit */
		"allowImportingTsExtensions": false,
		"verbatimModuleSyntax": false,

		/* Path mapping relative to API directory */
		"baseUrl": "..",
		"paths": {
			"@/shared/*": ["shared/src/*"],
			"@/react/*": ["./react/src/*"],
			"@/api/*": ["./api/src/*"]
		}
	},
	"include": ["src/**/*", "../shared/**/*", "*.ts"],
	"exclude": ["node_modules", "dist"]
}
