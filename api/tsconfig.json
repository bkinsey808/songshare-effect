{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		/* Composite project for workspace integration */
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.api.tsbuildinfo",

		/* Override for Cloudflare Workers build requirements */
		"target": "ES2022",
		"lib": ["ES2022"],
		"types": ["@cloudflare/workers-types"],
		"allowJs": true,
		"esModuleInterop": true,
		"noEmit": false,
		"outDir": "./dist",

		/* Path mapping relative to API directory */
		"baseUrl": "..",
		"paths": {
			"@/shared/*": ["./shared/*"],
			"@/react/*": ["./react/src/*"],
			"@/api/*": ["./api/src/*"]
		}
	},
	"include": ["src/**/*", "../shared/**/*"],
	"exclude": ["node_modules", "dist"]
}
