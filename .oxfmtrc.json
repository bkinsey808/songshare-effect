{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",

	"ignorePatterns": [
		"dist/*",
		"**/dist/**",
		"*/generated/**",
		"**/generated/**",
		"**/*.generated.*"
	],

	"overrides": [
		{
			"files": ["shared/src/validation/extractI18nMessages.ts"],
			"ignore": true
		}
	],

	// Use tabs for indentation instead of spaces
	"useTabs": true,

	// Enable experimental import sorting. Oxfmt's import sorting is experimental
	// and does not support full Prettier-style Regex group ordering; this configuration
	// approximates the trivago plugin behaviour by sorting imports/keeping group
	// separation and case-insensitive ordering.
	"experimentalSortImports": {
		// treat imports case-insensitively when sorting
		"ignoreCase": true,
		// keep a blank newline between import groups (like importOrderSeparation)
		"newlinesBetween": true,
		// sort alphabetically ascending within groups
		"order": "asc",
		// don't create groups based on comments by default
		"partitionByComment": false,
		// do not partition groups by blank lines (newlinesBetween already provides separation)
		"partitionByNewline": false
		// keep side-effect imports (import './x') where they are â€“ don't move them
		// "sortSideEffects": false
	}
}
